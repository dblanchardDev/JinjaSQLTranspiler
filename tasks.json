{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "JST: Set Options",
			"type": "shell",
			"command": "${config:python.pythonPath}",
			"args": [
				"jinjasqltranspiler\\jinjasqltranspiler.py",
				"options",
				"-t", "${input:jst_templates}",
				"-p", "${input:jst_transpiled}",
				"-d", "${input:jst_debug}",
				"-n", "${input:jst_ansi_nulls}",
				"-i", "${input:jst_ignore}"
			],
			"presentation": {
				"reveal": "always",
				"group": "JST"
			},
			"problemMatcher": []
		},
		{
			"label": "JST: Transpile Current File",
			"type": "shell",
			"command": "${config:python.pythonPath}",
			"args": [
				"jinjasqltranspiler\\jinjasqltranspiler.py",
				"transpile_file",
				"${file}",
				"${input:jst_formats}",
				"-w", "${workspaceFolder}"
			],
			"presentation": {
				"reveal": "always",
				"group": "JST"
			},
			"problemMatcher": []
		},
		{
			"label": "JST: Debug Current File",
			"type": "shell",
			"command": "${config:python.pythonPath}",
			"args": [
				"jinjasqltranspiler\\jinjasqltranspiler.py",
				"transpile_file",
				"${file}",
				"DEBUG",
				"-w", "${workspaceFolder}"
			],
			"presentation": {
				"reveal": "always",
				"group": "JST"
			},
			"problemMatcher": []
		},
		{
			"label": "JST: Transpile Project",
			"type": "shell",
			"command": "${config:python.pythonPath}",
			"args": [
				"jinjasqltranspiler\\jinjasqltranspiler.py",
				"transpile_project",
				"${input:jst_formats}",
				"-w", "${workspaceFolder}"
			],
			"presentation": {
				"reveal": "always",
				"group": "JST"
			},
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "jst_templates",
			"type": "promptString",
			"description": "Project folder containing all Jinja/SQL Templates.",
			"default": "templates"
		},
		{
			"id": "jst_transpiled",
			"type": "promptString",
			"description": "Output folder for transpiled SQL Files.",
			"default": "transpiled"
		},
		{
			"id": "jst_debug",
			"type": "promptString",
			"description": "Output folder for transpiled SQL debugging Files.",
			"default": "debug"
		},
		{
			"id": "jst_ansi_nulls",
			"type": "pickString",
			"description": "Whether to explicitly set ANSI-NULLS to on for programmability code.",
			"options": ["True", "False"],
			"default": "True"
		},
		{
			"id": "jst_ignore",
			"type": "promptString",
			"description": "A list of comma-separated strings which indicate template files to exclude from project transpilation.",
			"default": "ext,part"
		}
		{
			"id": "jst_formats",
			"type": "pickString",
			"description": "Output format",
			"options": ["Create", "Replace/Update", "None"],
			"default": "Create"
		}
	]
}